    <!-- Landing Screen slidedown script. -->
    <script type="text/javascript">
        window.onbeforeunload = function () {
            window.scrollTo(0, 0);
        }
            
        $(document).ready( function () {
            $('#down').on('click',function () {
                $("html").scrollTop(0);
                console.log("Clicked!");
                    $('html, body').animate({
                scrollTop: $(".facility-types").offset().top - 100
            }, 1000);
            });
        });
    </script>
